<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <link rel="icon" type="image/x-icon" href="../public/assets/favicon_icon.png">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.88.1">
    <title><%= lingua.title %></title>
    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="../public/stylesheets/index.css" rel="stylesheet">
    <link href="../public/stylesheets/obrainfo.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.8.2/css/lightbox.min.css">
    <link href="../node_modules/lightbox2/src/css/lightbox.css" rel="stylesheet" />

        <!-- Favicons -->
    <meta name="theme-color" content="#7952b3">
  </head>
  <body>      
    <%- include('header_black'); -%>
    <main class="container marketing">
      <div class="row">
        <div class="col-lg-12">
          <div class="foto-obra-container position-relative">
            <img src="../public/images/<%= data.portada %>" alt="portada obra" class="img-portada">
            <div class="info-card">
              <p><%= data.nombre %></p>
              <p><%= data.ubicacion %></p>
            </div>
          </div>
        </div>
      </div>
      <hr class="featurette-divider">
      <h4 class="mb-4"><%= lingua.obra_info_title %></h4>
      <div class="row">
        <div class="col-lg-3">
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= lingua.obra_info_tipo %></li>
            <li class="list-group-item"><%= lingua.obra_info_productos %></li>
            <li class="list-group-item"><%= lingua.obra_info_serie %></li>
            <li class="list-group-item"><%= lingua.obra_info_local %></li>
            <li class="list-group-item"><%= lingua.obra_info_fin %></li>
            <li class="list-group-item"><%= lingua.obra_info_derecho %></li>
          </ul>
        </div>
        <div class="col-lg-5">
          <ul class="list-group list-group-flush">
            <li class="list-group-item fw-light"><%= data.tipo %></li>
            
            <li class="list-group-item fw-light">
              <%= data.productos.join() %>
            </li>
            <li class="list-group-item fw-light"><%= data.series %></li>
            <li class="list-group-item fw-light"><%= data.localizacion %></li>
            <li class="list-group-item fw-light"><%= data.finalizacion %></li>
            <li class="list-group-item fw-light">Â© ElBulevar</li>
          </ul>
        </div>
      </div>
      <hr class="featurette-divider">
      
      <!-- FOTOS GALERIA -->
      <!-- <%= data %> -->
      <!-- !!!! PASAR A SERVIDOR DE IMAGNES ANTES DE PRODCUCCION -->
      <div class="row mb-5">
        <div class="col-lg-8">
          <div class="row galery-box">
            <div class="col-lg-5 p-1">
              <a href="../public/images/<%= data.imagenes[0] %>" data-lightbox="photos"><img class="img-fluid img-galery" src="../public/images/<%= data.imagenes[0] %>"></a>
            </div>
            <div class="col-lg-7 p-1">
              <a href="../public/images/<%= data.imagenes[1] %>" data-lightbox="photos"><img class="img-fluid img-galery" src="../public/images/<%= data.imagenes[1] %>"></a>
            </div>
          </div>
          <div class="row galery-box">
            <div class="col-lg-7 p-1">
              <a href="../public/images/<%= data.imagenes[2] %>" data-lightbox="photos"><img class="img-fluid img-galery" src="../public/images/<%= data.imagenes[2] %>"></a>
            </div>
            <div class="col-lg-5 p-1">
              <a href="../public/images/<%= data.imagenes[3] %>" data-lightbox="photos"><img class="img-fluid img-galery" src="../public/images/<%= data.imagenes[3] %>"></a>
            </div>
          </div>
        </div>
        <div class="col-lg-4 p-0">
          <a href="../public/images/<%= data.imagenes[4] %>" data-lightbox="photos"><img class="img-fluid img-galery" src="../public/images/<%= data.imagenes[4] %>"></a>
        </div>
      </div>

      <div class="i-top-container">
        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-arrow-up-square-fill i-top color-principal" viewBox="0 0 16 16" id="btn-to-top">
          <path d="M2 16a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2zm6.5-4.5V5.707l2.146 2.147a.5.5 0 0 0 .708-.708l-3-3a.5.5 0 0 0-.708 0l-3 3a.5.5 0 1 0 .708.708L7.5 5.707V11.5a.5.5 0 0 0 1 0z"/>
        </svg>
      </div> 
      <!-- Box Contactos -->
      <%- include('box-contactos'); -%>
    </main>
    <!-- FOOTER -->
    <%- include('footer'); -%>

    <div class="i-whatsapp-container">
      <div class="i-whatsapp">
        <a href="https://wa.me/5492494499028"><img src="../public/assets/whatsapp-logo.svg" alt="Whatsapp Logo"></a>
      </div>
    </div>
  <script src="../public/javascripts/index.js" crossorigin="anonymous"></script>
  <script language="javascript" src="../js/bootstrap.min.js"></script>
  <script src="../node_modules/lightbox2/dist/js/lightbox-plus-jquery.min.js"></script>
